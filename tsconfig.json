{
	"compilerOptions": {
		"noImplicitAny": false,
		"outDir": "dist",
		"module": "ES2015",
		"sourceMap": true,
		"esModuleInterop": true,
		"target" : "ES6",
		"declaration": true,
		// "noUnusedLocals": true,
		"lib" : ["es2015", "es2017", "dom"],
		"moduleResolution": "node",
		"types": [
			"node",
			"mocha"
		]
	},
	"files": [
		"./src/midi-file.d.ts"
	],
	"include": [
		"./src/*.ts"
	],
	"exclude": [
		// "node_modules"
	],
	"typedocOptions": {
		"exclude" : ["./src/Encode.ts", "./src/BinarySearch.ts", "./src/InstrumentMaps.ts"],
		"mode": "file",
		"excludeNotExported" : true,
		"out": "docs",
		"theme" : "minimal"
    }
}